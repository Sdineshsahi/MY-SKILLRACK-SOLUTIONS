TASK:
-----
STRING TOGGLE&DELETE CHARACTERS-C
----------------------------
CODE IN C:
---------------
#include<stdio.h>
#include<stdlib.h>

int main()
{
    char s1[1001],s2[1001];
    scanf("%s\n%s",s1,s2);
    int l1=strlen(s1);
    char* res=(char*)malloc(l1*sizeof(char));
    int k=0;
    for(int i=0;i<l1;i++){
        if(s2[i]=='1'&&isalpha(s1[i])){
            if(islower(s1[i])){
                res[k++]=toupper(s1[i]);
            }
            else if(isupper(s1[i])){
                res[k++]=tolower(s1[i]);
            }
        }
        else if(s2[i]=='0'){
            res[k++]=s1[i];
        }
    }
    res[k]="\0";
    printf("%s",res);

}

