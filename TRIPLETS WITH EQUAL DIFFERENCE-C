#include<stdio.h>
#include<stdlib.h>

int main()
{
    int n;
    scanf("%d",&n);
    int arr[n];
    for(int i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    int f=0;
    for(int i=0;i<n-2;i++){
        for(int j=i+1;j<n-1;j++){
            for(int k=j+1;k<n;k++){
                if(abs(arr[i]-arr[j])==abs(arr[j]-arr[k])){
                    printf("%d %d %d\n",arr[i],arr[j],arr[k]);
                    f=1;
                }
            }
        }
    }
    if(f==0){
        printf("-1");
    }

}
